<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:strokeWidth="5dp"
                app:strokeColor="@color/teal_700"
                android:src="@drawable/im_tour"
                android:layout_width="206dp"
                android:padding="5dp"
                app:shapeAppearanceOverlay="@style/circle"
                android:layout_height="206dp">

            </com.google.android.material.imageview.ShapeableImageView>

            <RelativeLayout
                android:layout_width="206dp"
                android:layout_height="206dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/image_circle_border">

               <androidx.cardview.widget.CardView
                   app:cardCornerRadius="100dp"
                   android:layout_width="200dp"
                   android:layout_height="200dp"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   >

                   <ImageView
                       android:src="@drawable/im_tour"
                       android:scaleType="centerCrop"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"

                       />

               </androidx.cardview.widget.CardView>

            </RelativeLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Click me"
                android:background="#833AB4"
                app:backgroundTint="@null"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Click me"
                android:background="@drawable/button_gradient"
                app:backgroundTint="@null"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Click me"
                android:background="@drawable/button_rounded"
                app:backgroundTint="@null"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:text="Click me"
                android:background="@drawable/button_circle"
                app:backgroundTint="@null"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Click me"
                android:background="@drawable/button_borders"
                app:backgroundTint="@null"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Click me"
                android:textColor="@color/black"
                android:background="@drawable/button_dashed"
                app:backgroundTint="@null"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Click me"
                android:textColor="@color/black"
                android:background="@drawable/button_gradient_rotate"
                app:backgroundTint="@null"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="Write something here"
                android:textSize="25sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bottom_border"
                android:backgroundTint="@null"
                android:padding="10dp"
                android:hint="Write something here"
                android:textSize="25sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_border_color"
                android:backgroundTint="@null"
                android:padding="10dp"
                android:hint="Write something here"
                android:textSize="25sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_border_style"
                android:backgroundTint="@null"
                android:padding="10dp"
                android:hint="Write something here"
                android:textSize="25sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_rounded_corners_border"
                android:backgroundTint="@null"
                android:padding="10dp"
                android:hint="Write something here"
                android:textSize="25sp"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>